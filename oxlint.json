{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["eslint", "typescript", "oxc", "vitest", "unicorn", "react", "react-perf"],
  "env": {
    "browser": true,
    "node": true,
    "es2024": true
  },
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error"] }]
  },
  "ignorePatterns": ["node_modules", "dist", "build", "coverage", "*.d.ts", "ios", "android", ".expo"]
}
