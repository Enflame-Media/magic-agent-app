# WASM files need correct content-type for proper loading
/*.wasm
  Content-Type: application/wasm

# Long-term cache for immutable Expo bundles (content-hashed)
/_expo/*
  Cache-Control: public, max-age=31536000, immutable

# Long-term cache for asset files
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Disable caching for index.html (OTA updates need fresh HTML)
/index.html
  Cache-Control: no-cache, no-store, must-revalidate

# Security headers for all responses
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  # Content-Security-Policy to reduce XSS attack surface
  # Note: 'unsafe-inline' is required for Expo web's inline scripts and React Native Web styles
  # 'unsafe-eval' is required for some libraries (e.g., hermes, metro bundler in dev)
  # In production, consider using nonces or hashes for stricter security
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.posthog.com https://*.cloudflareinsights.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https:; font-src 'self' data:; connect-src 'self' https://*.happy.engineering wss://*.happy.engineering https://*.posthog.com https://*.cloudflareinsights.com https://*.sentry.io https://*.expo.dev; media-src 'self' blob:; object-src 'none'; frame-ancestors 'none'; base-uri 'self'; form-action 'self'
  # Permissions-Policy to disable unnecessary browser features
  Permissions-Policy: geolocation=(self), microphone=(self), camera=(self), payment=(), usb=()
